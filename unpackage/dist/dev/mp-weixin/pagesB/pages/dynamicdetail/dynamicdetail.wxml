<view class="dynamic-box"><view class="dynamic-detail"><view class="top-title"><view class="title"><text style="font-size:30rpx;">{{dynamicObj.title}}</text></view><view class="title-detail"><text>{{"作者:"+dynamicObj.personName}}</text><text>{{dynamicObj.createtime}}</text><text>{{"阅读"+dynamicObj.hintcount}}</text></view></view><rich-text class="font24" nodes="{{String}}"></rich-text></view><view class="count"><text class="left">点赞评论</text><view class="right"><view class="comment"><image src="/static/home_icon/commen_icon.png" mode></image><text>{{dynamicObj.commentCount}}</text></view><view class="click"><image src="/static/home_icon/click_icon.png" mode></image><text>{{dynamicObj.admireCount}}</text></view></view></view><view class="comment-box"><view class="comment-title"><text>评论</text><view data-event-opts="{{[['tap',[['showReplyFun',['comment']]]]]}}" class="to-comment" bindtap="__e"><image src="/static/activity_icon/tocomment_icom.png" mode="widthFix"></image><text>发表评论</text></view></view><block wx:if="{{commentArr.length==0}}"><view class="no-comment" style="text-align:center;line-height:60rpx;">暂时没有评论哦,赶紧去评论吧 ~</view></block><block wx:else><view class="comment-content"><block wx:for="{{commentArr}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="content-item-box"><view class="item-info"><view class="info-left"><image src="{{item.headerUrl}}" mode="widthFix"></image></view><view class="info-right"><view class="right-top"><text class="person">{{item.nickName}}</text><view class="to-click"><block wx:if="{{item.isThumbsUp}}"><image src="/static/activity_icon/dianzan_y.png" mode></image></block><block wx:else><image src="/static/activity_icon/dianzan_n.png" mode data-event-opts="{{[['tap',[['checkState',[index]]]]]}}" bindtap="__e"></image></block><text>{{item.thumbsUp}}</text></view></view><view class="right-center-content">{{''+item.commentContent+''}}</view><view class="right-center-tocomment"><text data-event-opts="{{[['tap',[['showReplyFun',['reply',['o',['commentId',item.commentId],['toPerson',item.commentPerson]]]]]]]}}" class="time" bindtap="__e">{{item.commentTime+'\n\t\t\t\t\t\t\t\t·'}}<text>回复ta</text></text></view><block wx:if="{{item.replyList.length>0}}"><view data-event-opts="{{[['tap',[['pageToReply',['$0'],[[['commentArr','',index]]]]]]]}}" class="right-bottom-reply" bindtap="__e"><block wx:for="{{item.replyList}}" wx:for-item="items" wx:for-index="i" wx:key="i"><view class="reply-item"><block wx:if="{{i<2}}"><text class="all"><text class="person">{{items.fromPerson+" :"}}</text>{{items.replyContent}}</text></block></view></block><block wx:if="{{item.replyList.length>2}}"><view class="show-more">查看更多</view></block></view></block></view></view></view></block></view></block></view><block wx:if="{{showReply}}"><view class="to-reply"><textarea show-confirm-bar="false" focus="{{true}}" maxlength="200" cursor-spacing="20" fixed="{{true}}" auto-height="{{true}}" placeholder="发表评论" data-event-opts="{{[['blur',[['hideReplyFun',['$event']]]],['input',[['__set_model',['','replyContent','$event',[]]]]]]}}" value="{{replyContent}}" bindblur="__e" bindinput="__e"></textarea><text data-event-opts="{{[['tap',[['published',['$event']]]]]}}" class="sure-reply" bindtap="__e">发表</text></view></block></view>