<view class="my-order"><view class="tab-title"><block wx:for="{{tabArr}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['changeActiveIndex',[index]]]]]}}" class="title-item" bindtap="__e"><text class="{{['title',(activeIndex==index)?'active':'']}}">{{item}}</text><text hidden="{{!(activeIndex==index)}}" class="bottom-line"></text></view></block></view><view class="tab-content"><block wx:for="{{orderArr}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="item"><view data-event-opts="{{[['tap',[['pageToOrderDetail',['$0'],[[['orderArr','',index,'orderId']]]]]]]}}" class="shop-name" bindtap="__e"><block wx:if="{{item.thumbnail}}"><image src="{{item.thumbnail}}" mode></image></block><block wx:else><image src="/static/home_icon/store_logo.png" mode></image></block><text>{{item.storeName}}</text></view><view data-event-opts="{{[['tap',[['pageToOrderDetail',['$0'],[[['orderArr','',index,'orderId']]]]]]]}}" class="order-state" bindtap="__e"><text class="order">{{"订单号："+item.orderSn}}</text><text class="state">{{statusArr[index]}}</text></view><block wx:for="{{item.orderGoods}}" wx:for-item="goods" wx:for-index="i" wx:key="i"><view data-event-opts="{{[['tap',[['pageToOrderDetail',['$0'],[[['orderArr','',index,'orderId']]]]]]]}}" class="order-detail" bindtap="__e"><image class="left" src="{{state.baseUrl+goods.picture}}" mode></image><view class="right"><view class="name"><text class="name-title">{{goods.productName}}</text><text class="price">{{"￥"+goods.unitPrice+"元"}}</text></view><view class="count"><text class="intru">{{goods.depict}}</text><text class="cou">{{"-"+goods.unitIntegeral+"分"}}</text></view><view class="tag-integral"><text class="integral">{{"X"+goods.quantity}}</text></view></view></view></block><view data-event-opts="{{[['tap',[['pageToOrderDetail',['$0'],[[['orderArr','',index,'orderId']]]]]]]}}" class="order-time" bindtap="__e"><text class="time">{{"下单时间："+item.createtime}}</text><text class="total">{{"共"+item.toatalQuantity+"件商品   合计￥"+item.fee+"元"}}</text></view><view class="bottom-btns"><block wx:if="{{item.orderStatus=='order_dfk'}}"><text data-event-opts="{{[['tap',[['pageToToPay',['$0','$1'],[[['orderArr','',index,'orderSn']],[['orderArr','',index,'fee']]]]]]]}}" bindtap="__e">去支付</text></block><block wx:if="{{item.orderStatus=='order_dzt'||item.orderStatus=='order_dps'}}"><text data-event-opts="{{[['tap',[['applyReFound',[index,'$0'],[[['orderArr','',index,'orderId']]]]]]]}}" catchtap="__e">申请退款</text></block><block wx:if="{{item.orderStatus=='order_dfk'||item.orderStatus=='order_ywc'||item.orderStatus=='order_ytk'}}"><text data-event-opts="{{[['tap',[['deleteOrder',['$0',index],[[['orderArr','',index,'orderId']]]]]]]}}" catchtap="__e">删除订单</text></block><text data-event-opts="{{[['tap',[['makePhone',['$0'],[[['orderArr','',index,'phonenum']]]]]]]}}" bindtap="__e">联系卖家</text></view></view></block></view></view>