          align-items: center;
  line-height: 60rpx;
}
.my-message .top-select-all .btn {
  margin-right: 26rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.my-message .top-select-all .btn .no-choose {
  display: inline-block;
  margin-right: 30rpx;
}
.my-message .top-select-all .btn .select-icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 8rpx;
}
.my-message .message-item {
  margin: 12rpx 16rpx;
  height: 254rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.my-message .message-item .top-time {
  font-size: 22rpx;
  color: #999;
  line-height: 40rpx;
  text-align: center;
}
.my-message .message-item .msg {
  height: 100%;
  position: relative;
  background-color: #fff;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 20rpx 22rpx;
}
.my-message .message-item .msg .title {
  font-size: 25rpx;
  margin-bottom: 10rpx;
}
.my-message .message-item .msg .content {
  font-size: 25rpx;
  line-height: 40rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.my-message .message-item .msg .to-look {
  position: absolute;
  right: 22rpx;
  bottom: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.my-message .message-item .msg .to-look .btn {
  font-size: 25rpx;
  margin-right: 10rpx;
}
.my-message .message-item .msg .to-look .is-look {
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: #FF2F29;
}
.my-message .message-item .msg .is-select {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}
.bottom-fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #F3F3F1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.bottom-fixed image {
  width: 30rpx;
  height: 30rpx;
}
.bottom-fixed text {
  margin-top: 10rpx;
  font-size: 25rpx;
  color: #999;
