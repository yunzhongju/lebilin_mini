page {
  background-color: #EFEFEF;
}
.information-item .img-box {
  position: relative;
  width: 680rpx;
}
.information-item .img-box .img {
  width: 680rpx;
  height: 240rpx;
  border-radius: 10rpx;
}
.information-item .img-box .explain {
  position: absolute;
  height: 60rpx;
  width: 100%;
  bottom: 0;
  left: 0;
  background-color: rgba(35, 24, 21, 0.5);
  line-height: 60rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 0 0 10rpx 10rpx;
  text-indent: 12rpx;
}
.information-item .progress-box {
  width: 100%;
}
.information-item .progress-box .progress-item {
  width: 658rpx;
  box-sizing: border-box;
  margin: 0 auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.information-item .progress-box .progress-item .title {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  padding-right: 20rpx;
  box-sizing: border-box;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 30rpx;
  line-height: 60rpx;
}
.information-item .progress-box .progress-item .time-box {
  width: 154rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.information-item .progress-box .progress-item .time-box .time {
  font-size: 24rpx;
  line-height: 60rpx;
  color: #9fa0a0;
}
.information-item .progress-box .progress-item .time-box .go {
  width: 12rpx;
  height: 20rpx;
}
.card {
  width: 710rpx;
  margin: 18rpx auto 0;
  background-color: #ffffff;
  box-shadow: 0rpx 6rpx 10rpx #ddd;
  border-radius: 10rpx;
  padding: 10rpx 15rpx;
  box-sizing: border-box;
}

