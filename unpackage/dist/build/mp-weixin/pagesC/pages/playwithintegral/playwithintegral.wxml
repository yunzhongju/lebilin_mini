<view class="play-with-integral"><block wx:for="{{taskArr}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="play-item"><image class="left-img" src="{{state.baseUrl+item.picUrl}}" mode></image><view class="middle-content"><text class="title">{{item.taskName}}</text><text class="exprise">{{item.resume}}</text><text class="integral"><text style="color:#e60012;">{{"+"+item.integralReward}}</text>积分</text></view><view class="right-complate"><block wx:if="{{item.taskType=='task_walk'&&!item.isFinish}}"><text data-event-opts="{{[['tap',[['pageToCompate',['$0'],[[['taskArr','',index,'taskType']]]]]]]}}" class="btn" bindtap="__e">去同步</text></block><block wx:if="{{item.taskType!='task_walk'&&!item.isFinish}}"><text data-event-opts="{{[['tap',[['pageToCompate',['$0'],[[['taskArr','',index,'taskType']]]]]]]}}" class="btn" bindtap="__e">去完成</text></block><block wx:if="{{item.isFinish}}"><text class="btn finish">已完成</text></block><text class="is-complate"><text style="color:#e60012;">{{item.nowCount}}</text>{{"/"+item.sumCount}}</text></view></view></block></view>