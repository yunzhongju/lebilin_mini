.my-message {
  padding-bottom: 100rpx;
}
.my-message .top-select-all {
  font-size: 25rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: reverse;
