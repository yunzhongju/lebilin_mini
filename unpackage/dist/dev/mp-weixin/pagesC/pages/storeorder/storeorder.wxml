<view class="store-order"><view class="tab-title"><block wx:for="{{tabArr}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['changeActiveIndex',[index]]]]]}}" class="title-item" bindtap="__e"><text class="{{['title',(activeIndex==index)?'active':'']}}">{{item}}</text><text hidden="{{!(activeIndex==index)}}" class="bottom-line"></text></view></block></view><view class="tab-content"><block wx:for="{{orderArr}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['pageToOrderDetail',['$0',true],[[['orderArr','',index,'orderId']]]]]]]}}" class="item" bindtap="__e"><view class="order-state"><text class="order">{{"订单号："+item.ordersn}}</text><block wx:if="{{item.orderStatus=='order_dps'}}"><text class="state">待配送</text></block><block wx:if="{{item.orderStatus=='order_dzt'}}"><text class="state">待自提</text></block><block wx:if="{{item.orderStatus=='order_ywc'}}"><text class="state">已完成</text></block><block wx:if="{{item.orderStatus=='order_ytk'}}"><text class="state">已退款</text></block></view><block wx:for="{{item.orderGoods}}" wx:for-item="i" wx:for-index="dex" wx:key="dex"><view class="order-detail"><image class="left" src="{{state.baseUrl+i.picture}}" mode></image><view class="right"><view class="name"><text class="name-title">{{i.productName}}</text><text class="price">{{"￥"+i.unitPrice+"元"}}</text></view><view class="count"><text class="intru">{{i.depict}}</text><block wx:if="{{i.integral}}"><text class="integral">{{"-"+i.integral+"分"}}</text></block></view><view class="tag-integral"><text class="cou">{{"X"+i.quantity}}</text></view></view></view></block><view class="order-time"><text class="time">{{"下单时间："+item.paytime}}</text><text class="total">{{"共"+item.toatalQuantity+"件商品   合计￥"+item.realpayAmount+"元"}}</text></view></view></block></view></view>