.create-circle-box {
  box-sizing: border-box;
  padding: 10rpx 20rpx;
}
.create-circle-box .circle-name text {
  font-size: 24rpx;
  line-height: 50rpx;
}
.create-circle-box .circle-name input {
  font-size: 24rpx;
  line-height: 40rpx;
  height: 40rpx;
  background-color: #efefef;
  box-sizing: border-box;
  padding-left: 10rpx;
  border-radius: 8rpx;
}
.create-circle-box .circle-intruduce text, .create-circle-box .circle-master text {
  font-size: 24rpx;
  line-height: 50rpx;
}
.create-circle-box .circle-intruduce textarea, .create-circle-box .circle-master textarea {
  border-radius: 8rpx;
  font-size: 24rpx;
  width: 100%;
  background-color: #efefef;
  box-sizing: border-box;
  padding: 10rpx;
}
.create-circle-box .circle-intruduce .img-grid, .create-circle-box .circle-master .img-grid {
  padding: 10rpx 20rpx;
}
.create-circle-box .circle-intruduce .img-grid .img-row, .create-circle-box .circle-master .img-grid .img-row {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin: 10rpx 0;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.create-circle-box .circle-intruduce .img-grid .img-row ._img, .create-circle-box .circle-master .img-grid .img-row ._img {
  overflow: hidden;
  display: inline-block;
}
.create-circle-box .circle-intruduce .img-grid .img-row .act-img, .create-circle-box .circle-master .img-grid .img-row .act-img {
  position: relative;
  margin: 0rpx 7rpx 6rpx 0rpx;
}
.create-circle-box .circle-intruduce .img-grid .img-row .act-img .close-btn, .create-circle-box .circle-master .img-grid .img-row .act-img .close-btn {
  position: absolute;
  right: 6rpx;
  top: 6rpx;
  width: 100rpx;
  height: 100rpx;
}
.create-circle-box .circle-intruduce .img-grid .img-row .act-img .close-btn view, .create-circle-box .circle-master .img-grid .img-row .act-img .close-btn view {
  position: absolute;
  right: 0;
  top: 0;
  display: block;
  width: 32rpx;
  height: 32rpx;
  background: url("https://webapp.codoon.com/mini_sports_app/upload/act_ic-close.png") no-repeat top right;
  background-size: cover;
}
.create-circle-box .circle-intruduce .img-grid .img-row .add-img-box, .create-circle-box .circle-master .img-grid .img-row .add-img-box {
  display: inline-block;
  margin: 0rpx 6rpx 6rpx 0rpx;
}
